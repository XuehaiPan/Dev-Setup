    "mypy-type-checker.reportingScope": "workspace",
    "mypy-type-checker.args": [
        "--warn-redundant-casts",
        "--warn-unused-ignores",
        "--show-error-context",
        "--show-error-end",
        "--show-error-code-links",
        "--pretty",
        "--exclude='^(.*/)?setup\\.py$'",
        "--exclude='^(.*/)?test_.*\\.py$'",
        "--exclude='^(.*/)?test/.*\\.py$'",
        "--exclude='^(.*/)?tests/.*\\.py$'"
    ],
    "mypy-type-checker.ignorePatterns": [
